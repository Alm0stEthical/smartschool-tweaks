{
  "manifest_version": 3,
  "name": "Smartschool Tweaks",
  "version": "2.1",
  "description": "Verander je naam, profielfoto en aantal berichten.",
  "permissions": ["storage", "activeTab", "declarativeNetRequest"],
  "host_permissions": ["*://*.smartschool.be/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.smartschool.be/*"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  }
}
